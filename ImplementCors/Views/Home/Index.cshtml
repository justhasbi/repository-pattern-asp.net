@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-primary font-weight-bold mb-4">Dashboard</h2>

<div class="row my-4">
    <div class="col">
        <div class="card shadow">
            <div class="card-body">
                <!-- Chart container -->
                <div id="pie-chart">
                    
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow">
            <div class="card-body">
                <!-- Chart container -->
                <div id="donut-chart">
                    
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row ">
    <div class="col">
        <div class="card shadow">
            <div class="card-body">
                <!-- Chart container -->
                <div id="bar-chart">
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow">
            <div class="card-body">
                <!-- Chart container -->
                <div id="bar-chart-degree-amount">
                </div>
            </div>
        </div>
    </div>
